<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/about_crdroid"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="about"
        android:title="@string/about_crdroid">

        <!-- Changelog -->
        <PreferenceScreen
            android:key="changelog"
            android:title="@string/changelog_crdroid_title"
            android:fragment="com.android.settings.crdroid.Changelog" />

        <!-- Devices and Maintainers -->
        <PreferenceScreen
            android:key="devices"
            android:title="@string/device_maintainers_title"
            android:fragment="com.android.settings.crdroid.Devices" />

        <!-- crDroid Share -->
        <Preference
            android:key="share"
            android:title="@string/share_crdroid_title"
            android:summary="@string/share_crdroid_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="sites"
        android:title="@string/sites_crdroid">

        <!-- crDroid Website -->
        <Preference
            android:key="crdroid_website"
            android:title="@string/crdroid_website_title"
            android:summary="@string/crdroid_website_summary" />

        <!-- crDroid Github -->
        <Preference
            android:key="crdroid_source"
            android:title="@string/crdroid_source_title"
            android:summary="@string/crdroid_source_summary" />

        <!-- crDroid GooglePlus -->
        <Preference
            android:key="crdroid_google_plus"
            android:title="@string/crdroid_google_plus_title"
            android:summary="@string/crdroid_google_plus_summary" />

        <!-- crDroid Translation -->
        <Preference
            android:key="crdroid_translation"
            android:title="@string/crdroid_translation_title"
            android:summary="@string/crdroid_translation_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="themes"
        android:title="@string/themes_crdroid">

        <!-- crDroid Evolved -->
        <Preference
            android:key="crdroid_theme_evolved"
            android:title="@string/crdroid_theme_evolved_title"
            android:summary="@string/crdroid_theme_evolved_summary" />

        <!-- crDroid Not Only Red -->
        <Preference
            android:key="crdroid_theme_nor"
            android:title="@string/crdroid_theme_nor_title"
            android:summary="@string/crdroid_theme_nor_summary" />

    </PreferenceCategory>

</PreferenceScreen>
